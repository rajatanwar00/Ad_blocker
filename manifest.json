{
    "manifest_version": 3,
    "name": "Simple Ad Blocker",
    "version": "1.0",
    "permissions": [
      "declarativeNetRequest",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
        {
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
        }
        ]
    }
  }
  